{
  "name": "pip-kuaichuan-desktop",
  "version": "1.0.0",
  "description": "PIP_快传 局域网文件互传桌面端",
  "main": "main.js",
  "scripts": {
    "start": "node web-server.js",
    "start:desktop": "electron .",
    "dist:win": "electron-builder --win nsis --x64",
    "dist:portable": "electron-builder --win portable --x64"
  },
  "dependencies": {
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.pip.kuaichuan.desktop",
    "productName": "PIP_快传",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
